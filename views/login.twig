{% extends "layout.twig" %}

{% block content %}
    <h1>Login</h1>
    {% if errors %}
        {% include('errors.twig') %}
    {% endif %}
    <form action="../RepasoPHP/admin" method="post">
        <label for="email">Email: </label>
        <input type="email" name="email">
        <br>
        <label for="password">Password: </label>
        <input type="password" name="password">
        <br>
        <button type="submit">Login</button>
    </form>
{% endblock %}